<UserControl x:Class="KinoUI.Pages.DirectoriesListUC"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:local="clr-namespace:KinoUI"

             mc:Ignorable="d" d:DesignWidth="150" d:DesignHeight="350" >
    <Grid  >
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <!-- define an implicit BBCodeBlock style and add custom commands to the link navigator -->
            <Style TargetType="mui:BBCodeBlock" >
                <Setter Property="LinkNavigator">
                    <Setter.Value>
                        <mui:DefaultLinkNavigator>
                            <mui:DefaultLinkNavigator.Commands>
                                <local:SampleDisabledCommand x:Key="cmd://disabled" />
                                <local:SampleMsgBoxCommand x:Key="cmd://msgbox" />
                                <local:SampleParameterCommand x:Key="cmd://parameter" />
                            </mui:DefaultLinkNavigator.Commands>
                        </mui:DefaultLinkNavigator>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
    
            <ListBox>
                <ListBox.Resources>
                    <!--<Style TargetType="mui:BBCodeBlock" BasedOn="{StaticResource {x:Type mui:BBCodeBlock}}">
                        <Setter Property="LinkNavigator." Value="Red" />
                    </Style>-->
                </ListBox.Resources>
                    <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="Background" Value="LightSteelBlue"/>
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="Padding" Value="5"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Background" Value="Aqua"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="BorderBrush" Value="Black"/>
                            </Trigger>

                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Background" Value="Aqua"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="BorderBrush" Value="Red"/>
                            </Trigger>

                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
                
                <!--<mui:BBCodeBlock BBCode="[url=/Content/Directories/BreedNameUC.xaml]Breed Names[/url]" />-->
                <mui:BBCodeBlock BBCode="[url=/Content/Directories/ExhibitionCategoryUC.xaml]Exhibition Categories[/url]" />
                <mui:BBCodeBlock BBCode="[url=/Content/Directories/ExhibitionStatusesUC.xaml]Exhibition Statuses[/url]" />
                <mui:BBCodeBlock BBCode="[url=/Content/Directories/DocumentypesUC.xaml]Document Types[/url]" />
                <mui:BBCodeBlock BBCode="[url=/Content/Directories/ChampionStatusesUC.xaml]Champion Statuses[/url]" />
            <mui:BBCodeBlock BBCode="[url=/Content/Directories/TrialTypesUC.xaml]Trial types[/url]" />

                <mui:BBCodeBlock BBCode="[url=/Content/Directories/DewormingTypeUC.xaml]Deworming Types[/url]" />
                <mui:BBCodeBlock BBCode="[url=/Content/Directories/EctoparasitTypeUC.xaml]Ectoparasit Types[/url]" />
                <mui:BBCodeBlock BBCode="[url=/Content/Directories/HealthTestTypeUC.xaml]HealthTest Types[/url]" />
                <mui:BBCodeBlock BBCode="[url=/Content/Directories/VaccineTypeUC.xaml]Vaccine Types[/url]" />
            </ListBox>

            
            <!--<mui:BBCodeBlock xml:space="preserve">» navigate to the [url=/Content/Directories/AgeGroupUC.xaml]introduction page[/url]
                
» navigate to [url=http://www.google.com]http://www.google.com[/url] in the default browser

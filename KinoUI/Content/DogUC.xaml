			<CollectionViewSource x:Key="dambreedViewSource" Source="{Binding DataContext.tbl_breed, RelativeSource={RelativeSource AncestorType={x:Type content:DogUC}}}" />

			<CollectionViewSource x:Key="ownerViewSource" Source="{Binding DataContext.tbl_person, RelativeSource={RelativeSource AncestorType={x:Type content:DogUC}}}" />

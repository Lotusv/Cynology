	</UserControl.Resources>

	<UserControl.DataContext>
		<StaticResourceExtension ResourceKey="kinoDataSet"/>
	</UserControl.DataContext>

	<Grid >

		<Grid.Resources>
				<Style x:Key="style1" TargetType="TextBlock">
					<Setter Property="Foreground" Value="Red"/>
				</Style>

			<!-- Region (RadDataForm templates) -->
			<DataTemplate x:Key="DFdogTemplate" >
				<telerik:RadTabControl x:Name="TabCtl"  VerticalAlignment="Top" DisplayMemberPath="Content"  ScrollMode="Viewport" BorderThickness="0">
					<telerik:RadTabItem Header="Main Info" >
						<Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" Margin="5">
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition ></ColumnDefinition>
									<ColumnDefinition ></ColumnDefinition>
								</Grid.ColumnDefinitions>
								<Grid.RowDefinitions>
									<RowDefinition></RowDefinition>
									<RowDefinition></RowDefinition>
									<RowDefinition></RowDefinition>
									<RowDefinition></RowDefinition>
									<RowDefinition></RowDefinition>
									<RowDefinition></RowDefinition>
									<RowDefinition></RowDefinition>
									<RowDefinition></RowDefinition>
									<RowDefinition></RowDefinition>
									<RowDefinition></RowDefinition>
									<RowDefinition></RowDefinition>
									<RowDefinition></RowDefinition>
									<RowDefinition></RowDefinition>
									<RowDefinition></RowDefinition>
									<RowDefinition></RowDefinition>
									<RowDefinition></RowDefinition>
									<RowDefinition></RowDefinition>
									<RowDefinition></RowDefinition>
								</Grid.RowDefinitions>

								<TextBlock Text="Name:" Foreground="{StaticResource Accent}" Margin="2"></TextBlock>
								<TextBlock Text="{Binding full_name}" Margin="2" Grid.Column="1"></TextBlock>


								<TextBlock Grid.Row="1" Text="Alias:" Foreground="{StaticResource Accent}" Margin="2"></TextBlock>
								<TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding name_alias}" Margin="2"></TextBlock>


								<TextBlock Grid.Row="2" Text="Tatoo:" Foreground="{StaticResource Accent}" Margin="2"></TextBlock>
								<TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding tatoo}" Margin="2"></TextBlock>


								<TextBlock Grid.Row="3" Text="Chip:" Foreground="{StaticResource Accent}" Margin="2"></TextBlock>
								<TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding chip_id}" Margin="2"></TextBlock>


								<TextBlock Grid.Row="4"  Text="Birth date:" Foreground="{StaticResource Accent}" Margin="2"></TextBlock>
								<TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding br_date}" Margin="2"></TextBlock>


								<TextBlock Grid.Row="5"  Text="Decease date:" Foreground="{StaticResource Accent}" Margin="2"></TextBlock>
								<TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding death_date}" Margin="2"></TextBlock>


								<TextBlock Grid.Row="6" Text="Country:" Foreground="{StaticResource Accent}" Margin="2"></TextBlock>
								<TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding country}" Margin="2"></TextBlock>


								<TextBlock Grid.Row="7"  Text="Color:" Foreground="{StaticResource Accent}" Margin="2"></TextBlock>
								<TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding color}" Margin="2"></TextBlock>

								<TextBlock Grid.Row="8"  Text="Size:" Foreground="{StaticResource Accent}" Margin="2"></TextBlock>
								<TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding size}" Margin="2"></TextBlock>

								<TextBlock Grid.Row="9"  Text="Hair type:" Foreground="{StaticResource Accent}" Margin="2"></TextBlock>
								<TextBlock Grid.Row="9" Grid.Column="1" Text="{Binding hair}" Margin="2"></TextBlock>

								<TextBlock Grid.Row="10"  Text="Sex:" Foreground="{StaticResource Accent}" Margin="2"></TextBlock>
								<TextBlock Grid.Row="10" Grid.Column="1" Text="{Binding sex}" Margin="2"></TextBlock>

								<StackPanel Orientation="Horizontal"  Grid.Row="11" Grid.ColumnSpan="2">
									<TextBlock Text="Number:" Foreground="{StaticResource Accent}" Margin="2"></TextBlock>
									<TextBlock Text="{Binding countrycode}" Margin="2"></TextBlock>
									<TextBlock Text="{Binding additional_prefix}" Margin="2"></TextBlock>
									<TextBlock Text="{Binding reg_number}" Margin="2"></TextBlock>
									<TextBlock Text="{Binding additional_postfix}" Margin="2"></TextBlock>
								</StackPanel>

								<StackPanel Orientation="Horizontal"  Grid.Row="12" Grid.ColumnSpan="2">
									<TextBlock Text="Breed:" Foreground="{StaticResource Accent}" Margin="2"></TextBlock>
									<TextBlock Text="{Binding breedname}" Margin="2"></TextBlock>
									<TextBlock Text="{Binding breed_descriptions}" Margin="2"></TextBlock>
								</StackPanel>

								<TextBlock Grid.Row="13" Text="Sir:" Foreground="{StaticResource Accent}" Margin="2"></TextBlock>
								<TextBlock Grid.Row="13" Grid.Column="1" Text="{Binding sir_name}" Margin="2"></TextBlock>


								<TextBlock Grid.Row="14"  Text="Dame:" Foreground="{StaticResource Accent}" Margin="2"></TextBlock>
								<TextBlock Grid.Row="14" Grid.Column="1" Text="{Binding dame_name}" Margin="2"></TextBlock>

								<StackPanel Orientation="Horizontal"  Grid.Row="15" Grid.ColumnSpan="2">
									<TextBlock Text="Owner:" Foreground="{StaticResource Accent}" Margin="2"></TextBlock>
									<TextBlock Text="{Binding owner_name}" Margin="2"></TextBlock>
									<TextBlock Text="Coowner:" Foreground="{StaticResource Accent}" Margin="2"></TextBlock>
									<TextBlock Text="{Binding coowner_name}" Margin="2"></TextBlock>
									<TextBlock Text="Breeder:" Foreground="{StaticResource Accent}" Margin="2"></TextBlock>
									<TextBlock Text="{Binding breeder_name}" Margin="2"></TextBlock>
								</StackPanel>

								<TextBlock Grid.Row="16" Text="Status:" Foreground="{StaticResource Accent}" Margin="2"></TextBlock>
								<TextBlock Grid.Row="16" Grid.Column="1" Text="{Binding status_name}" Margin="2"></TextBlock>


								<TextBlock Grid.Row="17"  Text="Details:" Foreground="{StaticResource Accent}" Margin="2"></TextBlock>
								<TextBlock Grid.Row="17" Grid.Column="1" Text="{Binding details}" Margin="2"></TextBlock>

							</Grid>
						</Border>
					</telerik:RadTabItem>
					<telerik:RadTabItem Header="Documents" >
						<Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" Margin="5"  >
							<Grid x:Name="GridDocumentsRO" DataContext="{StaticResource dogDocumentViewSource}" Margin="15,0,0,0" >
								<Grid.RowDefinitions>
									<RowDefinition Height="30"></RowDefinition>
									<RowDefinition ></RowDefinition>
								</Grid.RowDefinitions>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="Auto"></ColumnDefinition>
								</Grid.ColumnDefinitions>

								<DockPanel LastChildFill="False">
									<DockPanel.Background>
										<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
											<GradientStop Color="Black" Offset="0"/>
											<GradientStop Color="White" Offset="1"/>
										</LinearGradientBrush>
									</DockPanel.Background>
									<TextBlock Text="Documents" VerticalAlignment="Center" DockPanel.Dock="Left" Foreground="White" Margin="2" ></TextBlock>


									<mui:ModernButton x:Name="btnOpenDocument"  Click="btnOpenDocument_Click" IconData="{StaticResource  ViewIconData}" 
													  Foreground="White" Margin="2"  DockPanel.Dock="Right"  Cursor="Hand" />

								</DockPanel>



								<telerik:RadGridView x:Name="grdDocumentsRO"  AutoGenerateColumns="False" NewRowPosition="None" ShowGroupPanel="False" ItemsSource="{Binding }"  
														IsFilteringAllowed="False"  SelectionMode="Single"
													   ShowColumnHeaders="False" Grid.Row="1"  MouseDoubleClick="grdDocuments_MouseDoubleClick">
									<telerik:RadGridView.Columns>
										<telerik:GridViewDataColumn Header="File Name" DataMemberBinding="{Binding file_name}"   />
									</telerik:RadGridView.Columns>
								</telerik:RadGridView>
							</Grid>
						</Border>
					</telerik:RadTabItem>
					<telerik:RadTabItem Header="Champions" >

						<Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" Margin="5"  >

							<telerik:RadTabControl x:Name="TabCtlChampions"  VerticalAlignment="Top" DisplayMemberPath="Content"  ScrollMode="Viewport" BorderThickness="0">
								<telerik:RadTabItem Header="Champions" >
									<Grid x:Name="GridChampions" DataContext="{StaticResource championsViewSource}" Margin="15,0,0,0" >
										<telerik:RadGridView x:Name="grdChampions"  AutoGenerateColumns="False" 
													 RowIndicatorVisibility="Collapsed" 
													 NewRowPosition="None" 
													 ShowGroupPanel="False"
													 IsFilteringAllowed="False"
													 CanUserDeleteRows="True"
													 IsReadOnly="True" 
													 ItemsSource="{Binding }"           
													  SelectionMode="Single"
													 ShowColumnHeaders="False" >
											<telerik:RadGridView.Columns>
												<telerik:GridViewComboBoxColumn Header="Champion status"   ItemsSource="{Binding Source={StaticResource championStatusesTypeViewSource}}" 
																		Width="50" x:Name="cmbChampions" 
													DataMemberBinding="{Binding Mode=TwoWay, Path=championStatusid}" 
													SelectedValueMemberPath="championStatusid" 
													DisplayMemberPath="championStatusName"  />
												<telerik:GridViewComboBoxColumn Header="Country"   ItemsSource="{Binding Source={StaticResource countryCodeSource1}}" 
																		Width="50" x:Name="cmbChamionCountry" 
													DataMemberBinding="{Binding Mode=TwoWay, Path=country_id}" 
													DisplayMemberPath="prefix"   
													SelectedValueMemberPath="country_id" />
												<telerik:GridViewDataColumn Header="Date" DataMemberBinding="{Binding statusDate}" DataFormatString="{} {0:dd.MM.yyyy}" />
												<telerik:GridViewDataColumn Header="Remarks" DataMemberBinding="{Binding Remarks}"  />
											</telerik:RadGridView.Columns>
										</telerik:RadGridView>
									</Grid>
								</telerik:RadTabItem>

								<telerik:RadTabItem Header="Trials" >
									<Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" Margin="5">
										<Grid x:Name="GridTrials" DataContext="{StaticResource trialsViewSource}" Margin="15,0,0,0" >
											<telerik:RadGridView x:Name="grdTrials"  AutoGenerateColumns="False" RowIndicatorVisibility="Collapsed"
													 ItemsSource="{Binding }" 
													 RowStyleSelector="{StaticResource modifiedRowStyle}" 
													 ShowGroupPanel="False"   IsFilteringAllowed="False"  
													 CanUserDeleteRows="True" SelectionMode="Single" IsReadOnly="True"
													 ShowColumnHeaders="False" >
												<telerik:RadGridView.Columns>
													<telerik:GridViewComboBoxColumn Header="Vaccine"   ItemsSource="{Binding Source={StaticResource trialtypeViewSource}}" 
																		Width="50" x:Name="cmbTrialType" 
													DataMemberBinding="{Binding Mode=TwoWay, Path=trial_type_id}" 
													SelectedValueMemberPath="trial_type_id" 
													DisplayMemberPath="trial_type_code"  />

													<telerik:GridViewDataColumn Header="Date" DataMemberBinding="{Binding trial_Date}" DataFormatString="{} {0:dd.MM.yyyy}" />
												</telerik:RadGridView.Columns>
											</telerik:RadGridView>
										</Grid>
									</Border>
								</telerik:RadTabItem>
							</telerik:RadTabControl>
						</Border>

					</telerik:RadTabItem>
					<telerik:RadTabItem Header="Medication">
						<Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" Margin="5"  >
							<telerik:RadTabControl x:Name="TabCtlMedication"  VerticalAlignment="Top" DisplayMemberPath="Content"  ScrollMode="Viewport" BorderThickness="0">
								<telerik:RadTabItem Header="Health Tests" >
									<Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" Margin="5">
										<Grid x:Name="GridHealthTest" DataContext="{StaticResource healthtestViewSource}" Margin="15,0,0,0" >
											<telerik:RadGridView x:Name="grdHealthTest"  AutoGenerateColumns="False" RowIndicatorVisibility="Collapsed"
													 NewRowPosition="None" ItemsSource="{Binding }" IsReadOnly="True"
													 RowStyleSelector="{StaticResource modifiedRowStyle}" 
													 ShowGroupPanel="False"   IsFilteringAllowed="False"  
													 CanUserDeleteRows="True" SelectionMode="Single"
													 ShowColumnHeaders="False" >
												<telerik:RadGridView.Columns>
													<telerik:GridViewComboBoxColumn Header="Health test"   ItemsSource="{Binding Source={StaticResource healthtesttypeViewSource}}" 
																		Width="50" x:Name="cmbHealthtest" 
													DataMemberBinding="{Binding Mode=TwoWay, Path=healthtest_type_id}" 
													SelectedValueMemberPath="healthtest_type_id" 
													DisplayMemberPath="healthtest_type_code"  />

													<telerik:GridViewDataColumn Header="Date" DataMemberBinding="{Binding test_Date}" DataFormatString="{} {0:dd.MM.yyyy}" />
													<telerik:GridViewDataColumn Header="Result" DataMemberBinding="{Binding healthtest_value}"  />
												</telerik:RadGridView.Columns>
											</telerik:RadGridView>
										</Grid>
									</Border>
								</telerik:RadTabItem>
								<telerik:RadTabItem Header="Vaccination" >
									<Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" Margin="5">
										<Grid x:Name="GridVaccination" DataContext="{StaticResource vaccineViewSource}" Margin="15,0,0,0" >
											<telerik:RadGridView x:Name="grdVaccination"  AutoGenerateColumns="False" RowIndicatorVisibility="Collapsed"
													 NewRowPosition="None" ItemsSource="{Binding }" IsReadOnly="True"
													 RowStyleSelector="{StaticResource modifiedRowStyle}" 
													 ShowGroupPanel="False"   IsFilteringAllowed="False"  
													 CanUserDeleteRows="True" SelectionMode="Single"
													 ShowColumnHeaders="False" >
												<telerik:RadGridView.Columns>
													<telerik:GridViewComboBoxColumn Header="Vaccine"   ItemsSource="{Binding Source={StaticResource vaccinetypeViewSource}}" 
																		Width="50" x:Name="cmbVaccineType" 
													DataMemberBinding="{Binding Mode=TwoWay, Path=vaccine_type_id}" 
